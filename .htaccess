Options +FollowSymLinks
RewriteEngine On
RewriteBase /ZooArcadia/

# Si le fichier ou le dossier existe, le servir directement
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Exclure les fichiers statiques (CSS, JS, images) des redirections
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|webp|svg|woff|woff2|ttf|eot)$ [NC]
RewriteRule ^ - [L]

# Sinon, rediriger toutes les autres requÃªtes vers index.php
RewriteRule ^ index.php [L]
